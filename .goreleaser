# Simple GoReleaser config untuk sfDBTools_new
project_name: sfdbtools

before:
  hooks:
    - go mod tidy

builds:
  - id: sfdbtools
    main: ./cmd   # SESUAIKAN: jika entry point bukan ./cmd/main.go ganti ke path main sebenarnya
    binary: sfdbtools
    env:
      - CGO_ENABLED=0
    goos:
      - linux
      - darwin
      - windows
    goarch:
      - amd64
      - arm64
    ldflags:
      - -s -w
      - -X sfDBTools/internal/version.Version={{.Version}}
      - -X sfDBTools/internal/version.Commit={{.Commit}}
      - -X sfDBTools/internal/version.Date={{.Date}}

archives:
  - id: archives
    builds:
      - sfdbtools
    format: tar.gz
    name_template: "{{ .ProjectName }}_{{ .Version }}_{{ .Os }}_{{ .Arch }}"
    files:
      - LICENSE*
      - README.md
      - config/config.example.yaml
      - README_CONFIG.md
    replacements:
      darwin: macOS
    # Windows: tar.gz ok; jika mau zip:
    # format_overrides:
    #   - goos: windows
    #     format: zip

checksum:
  name_template: "checksums_{{ .Version }}.txt"

signs:
  # Aktifkan kalau kamu pakai cosign / minisign
  # - artifacts: checksum
  #   cmd: cosign
  #   args: ["sign-blob", "--output-signature", "${signature}", "${artifact}"]
  #   signature: "${artifact}.sig"

changelog:
  sort: asc
  filters:
    exclude:
      - "^docs:"
      - "^test:"

release:
  draft: false
  prerelease: false